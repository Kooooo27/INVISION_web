rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    /* 
      =========================================================
      INVISION Firestore Security Rules (Production)
      =========================================================
    */

    // Helper: Check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper: Check if user is accessing their own document
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // 1. Users Collection
    // - Everyone can read basic profiles (if public features exist)
    // - Only owner can write/update their own profile
    match /users/{userId} {
      allow read, write: if isOwner(userId);
    }

    // Customers / Products rules removed (Stripe Extension no longer active)
    // TODO: Re-add rules for new payment provider when ready
  }
}
